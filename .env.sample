# ============================================
# BonusPerMe — Configurazione Ambiente
# ============================================
# Copia questo file in .env e compila i valori.
# cp .env.sample .env
# ============================================

# === Server ===
PORT=8080
BASE_URL=https://bonusperme.it
ENV=production

# === Google Tag Manager ===
# Vuoto = disattivato, nessun tracking
GTM_ID=

# === Sentry (error tracking) ===
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=bonusperme@1.0.0

# === Scraper ===
SCRAPER_ENABLED=true
SCRAPER_INTERVAL=24h

# === Rate Limiting ===
RATE_LIMIT_RPS=30
RATE_LIMIT_BURST=60

# === Link Checker ===
LINKCHECK_ENABLED=true
LINKCHECK_INTERVAL=24h
LINKCHECK_DELAY=5s

# === Data Sources (true/false to enable/disable) ===
DATASOURCE_INPS=true
DATASOURCE_ADE=true
DATASOURCE_MISE=true
DATASOURCE_GU=false
DATASOURCE_OPENAPI=false

# === HTTP ===
USER_AGENT=Mozilla/5.0 (compatible; BonusPerMeBot/1.0; +https://bonusperme.it)

# === Middleware ===
GZIP_ENABLED=true

# === Cloudflare Turnstile ===
TURNSTILE_SITE_KEY=
TURNSTILE_SECRET_KEY=

# === Web3Forms ===
WEB3FORMS_ACCESS_KEY=

# === Admin ===
ADMIN_API_KEY=

# === Validity Check ===
VALIDITY_CHECK_ENABLED=true

# === News Check (validità bonus) ===
NEWS_CHECK_ENABLED=false
NEWS_CHECK_INTERVAL=6h
